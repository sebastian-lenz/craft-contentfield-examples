label: Text with image
icon: material:format_align_left
preview: >
  <dl>
    <dt>{{ image }}</dt>
    <dd>{{ body }}</dd>
  </dl>
fields:
  image:
    type: image
    width: 120px
  body:
    type: redactor
    width: calc(100% - 120px)
---
<div{{ editAttributes }}>
  <h4>Member #{{ loop.index }}</h4>

  {% if info is defined %}
    <div class="alert alert-secondary" role="alert">
      Passed info: <strong>{{ info }}</strong>
    </div>
  {% endif %}

  {{ body }}
</div>
